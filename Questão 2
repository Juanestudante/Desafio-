

#include <stdio.h>
#include <stdbool.h>

// Definimos um tamanho máximo para o nosso conjunto
#define MAX_ELEMENTOS 1000

// Conjunto global para armazenar os elementos já vistos
int vistos[MAX_ELEMENTOS];
int contador_vistos = 0;

bool not_repeated(int valor) {
    // Verifica se o valor já foi visto
    for (int i = 0; i < contador_vistos; i++) {
        if (vistos[i] == valor) {
            return false;
        }
    }

    // Se o valor é inédito, o adicionamos ao conjunto
    if (contador_vistos < MAX_ELEMENTOS) {
        vistos[contador_vistos++] = valor;
    }
    return true;
}

// Função filtro para aplicar o filtro usando not_repeated
void filtro(int* array, int* tamanho) {
    int novo_tamanho = 0;
    for (int i = 0; i < *tamanho; i++) {
        if (not_repeated(array[i])) {
            array[novo_tamanho++] = array[i];
        }
    }
    *tamanho = novo_tamanho;
}

// Função principal para testar
int main() {
    int array[] = {1, 2, 3, 2, 4, 5, 1, 6, 7, 5};
    int tamanho = 10;

    filtro(array, &tamanho);

    printf("Array filtrado: ");
    for (int i = 0; i < tamanho; i++) {
        printf("%d ", array[i]);
    }
    printf("\n");

    return 0;
}
```